<Window x:Class="productionltd.SpecialOrder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SpecialOrder" Height="190" Width="300">
    <Grid>
        <Label Content="Størrelse:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="15,10,0,0"/>
        <TextBox x:Name="width" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="57" Margin="75,13,0,0"/>
        <Label Content="x" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="130,10,0,0"/>
        <TextBox x:Name="height" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="57" Margin="145,13,0,0"/>
        <Label Content="x" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="201,10,0,0"/>
        <TextBox x:Name="length" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="57" Margin="216,13,0,0"/>
        <Label Content="Materiale:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="15,41,0,0"/>
        <TextBox x:Name="Name" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="197" Margin="76,44,0,0"/>
        <TextBox x:Name="MachineTime" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="127" Margin="146,80,0,0" KeyUp="SaveTime"/>
        <Button Content="Tilføj Produkt" HorizontalAlignment="Left" VerticalAlignment="Top" Width="97" Margin="94,120,0,0" Click="Button_Click"/>
        <ComboBox x:Name="Machines" HorizontalAlignment="Left" Margin="15,80,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="Machines_SelectionChanged"/>

    </Grid>
</Window>
