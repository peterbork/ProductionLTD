<Window x:Class="productionltd.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Production LTD" Height="350" Width="525">
    <Grid>
        <ComboBox Name="Type" HorizontalAlignment="Left" VerticalAlignment="Top" Width="159" Margin="10,10,0,0"/>
        <TextBox Name="Count" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap"   VerticalAlignment="Top" Width="68" Margin="174,9,0,0" ToolTip="Count"/>
        <DatePicker Name="Deadline" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,37,0,0" Width="159"/>
        <Button Name="BtnAdd" Content="Add" HorizontalAlignment="Left" VerticalAlignment="Top" Width="68" Margin="174,37,0,0" Click="BtnAdd_Click"/>
        <ListBox Name="OrderPreview" HorizontalAlignment="Left" Height="211" Margin="10,66,0,0" VerticalAlignment="Top" Width="232"/>
        <Button Content="Send Order" HorizontalAlignment="Left" VerticalAlignment="Top" Width="232" Margin="10,282,0,0"/>
    </Grid>
</Window>
